            // Funkcja do renderowania kart (przyjazna dla urządzeń mobilnych)
            function renderCard(thread) {
                return `
                    <div class="card-popiol p-6 rounded-lg shadow-xl hover:shadow-2xl transition duration-300">
                        <h3 class="text-xl font-bold mb-3 header-font text-xl" style="color: var(--color-zloto);">${thread.wątek}</h3>
                        <p class="mb-4 text-sm">${thread.opis}</p>
                        <div class="text-xs source-text pt-2 border-t" style="border-color: #555;">
                            Źródła: ${thread.źródła}
                        </div>
                    </div>
                `;
            }

            // Funkcja do renderowania całej sekcji
            function renderSection(section) {
                const cardsHtml = section.threads.map(renderCard).join('');
                return `
                    <section id="${section.id}" class="mb-16 pt-8">
                        <h2 class="text-3xl sm:text-4xl font-extrabold mb-6 header-font flex items-center accent-zloto border-b pb-2" style="border-color: var(--color-zloto); letter-spacing: 0.1em;">
                            <span class="mr-3 text-4xl icon-flame">${section.icon}</span> ${section.title}
                        </h2>
                        <p class="text-gray-400 mb-8 max-w-4xl text-sm">${section.description}</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                            ${cardsHtml}
                        </div>
                    </section>
                `;
            }

            // Renderowanie wszystkich sekcji do main
            document.addEventListener('DOMContentLoaded', () => {
                const mainContainer = document.querySelector('main');
                const htmlContent = sectionsData.map(renderSection).join('');
                mainContainer.innerHTML += htmlContent;
            });
        </script>

    </main>

